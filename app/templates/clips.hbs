<h2>Clips Template</h2>

{{input value=title placeholder="Title"}}
{{input value=url placeholder="https://..."}}
<button {{action "createClip"}}>Publish</button>

<section id="main">
    <ul id="clips-list">
        {{#each model as |clips|}}
            {{clip-item clip=clips}}
        {{/each}}
    </ul>

    <input type="checkbox" id="toggle-all">
</section>

<footer id="footer">
    <span id="clips-count">
        <strong>2</strong> clips left
    </span>
    <ul id="filters">
        <li>
            {{#link-to "clips"}}All{{/link-to}}
        </li>
        <li>
            {{#link-to "starred"}}Starred{{/link-to}}
        </li>
    </ul>

    <button id="clear-completed">
        Clear completed (1)
    </button>
</footer>
